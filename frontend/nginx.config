server {
  listen 80;
  server_name localhost;

  root /usr/share/nginx/html;
  index index.html;

  location / {
    # This is the key part:
    # 1. Try to find the file requested by the browser ($uri).
    # 2. If it's a folder, try to find an index file in it ($uri/).
    # 3. If neither of the above works, fall back to serving /index.html.
    try_files $uri $uri/ /index.html;
  }
}