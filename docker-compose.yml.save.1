version: "3.9"

services:
  backend:
    build: ./backend
    container_name: backend
    ports:
      - "5000:8000"
    environment:
      SECRET_KEY: "plT4VTNxj+RfdBvIEc6kV8PanIEMa8hPgNWntGrCJfO3fjJ6Ex9RywRFTVta8Qsx"
      ALGORITHM: "HS256"
      ACCESS_TOKEN_EXPIRE_MINUTES: 60
      OLLAMA_HOST: "http://ollama:11434"
    depends_on:
      - ollama
    dns:
      - 8.8.8.8
      - 8.8.4.4
    networks:
      - app_net
    restart: unless-stopped

  frontend:
    build: ./frontend
    container_name: frontend
    ports:
      - "8080:80"
    env_file:
      - ./frontend/.env
    depends_on:
      - backend
    networks:
      - app_net
    restart: unless-stopped

  ollama:
    image: ollama/ollama
    ports:
      - "11434:11434" # optional, only needed if you want to test from outside
    volumes:
      - ollama_data:/root/.ollama
    networks:
      - app_net
    restart: unless-stopped

volumes:
  ollama_data:

networks:
  app_net:
    driver: bridge
